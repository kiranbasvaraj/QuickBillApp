<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuickBill.Views.LoginPage">
    <VerticalStackLayout Padding="20"
                         Spacing="20">
<Label Text="Welcome to QuickBill"
               FontSize="32"
               HorizontalTextAlignment="Center"
               TextColor="Black"/>
        <Entry Placeholder="Enter Company Name"  HorizontalTextAlignment="Center" TextColor="Black" PlaceholderColor="Gray" Text="{Binding CompanyName}"/>
        <Button Text="Continue" BackgroundColor="#F85903" Command="{Binding ContinueCommand}"></Button>

    </VerticalStackLayout>
</ContentPage>