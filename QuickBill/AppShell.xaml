<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuickBill.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuickBill"
    xmlns:views="clr-namespace:QuickBill.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="QuickBill"
    Shell.TabBarUnselectedColor="#FF989696"
    Shell.TabBarForegroundColor="#FFF55600"
    Shell.TabBarBackgroundColor="#F5F5F5"
    Shell.BackgroundColor="#FF989696">
    <ShellContent  Route="LoginPage"
                   ContentTemplate="{DataTemplate views:LoginPage}"/>

    <TabBar Route="MainTabs">
        <Tab Title="Receipt"
             Icon="receipt">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}"/>
        </Tab>
        <Tab Icon="history"
             Title="History">
            <ShellContent ContentTemplate="{DataTemplate views:ReceiptHistoryPage}"/>
        </Tab>
    </TabBar>


</Shell>

